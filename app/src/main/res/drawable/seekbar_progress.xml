<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape
            android:shape="line">
            <stroke
                android:color="#ababab"
                android:width="4dp"/>
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape
                android:shape="line">
                <stroke
                    android:color="#3399cc"
                    android:width="4dp"/>
            </shape>
        </clip>
    </item>

</layer-list>